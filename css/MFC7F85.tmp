@charset "utf-8";
/* CSS Document */
body{ background-color:#f2f2f2;}
.box-info{position:absolute; width:60%;  margin:25px 21% 0px 21%; background-color:#fff;border:#ccc 1px solid;border:#ddd 1px solid;}
.info-text{width:95%; margin:30px 2.5% 40px 2.5%; }

.info-box{ width:50%; margin:0px 25% 300px 25%; border:#ccc 1px solid;}
.box-text{ margin:15px;}
.photo{ width:100px; height:100px; background-color:#ff0; border-radius:10px;}
.name{ font-size:25px; margin:-111px 0px 0px 11%;}
.people{font-size:14px; margin:5px 0px 15px 11%;}
.address{margin:-26px 0px 15px 25%;font-size:14px; color:#aaa;}

.about{  margin:0px 0px 10px 11%;}
.about-photo{ margin-top:-5px;}
.button{width:46%;  margin:230px 0px 0px 21%; background-color:#f00;  }
.button1{width:50%; float:left; background-color:#e94057;height:40px; text-align:center; padding-top:7px; display:block;}
.button1 a{ text-decoration:none; color:#fff;display:block;}
.button2{width:50%; float:left; background-color:#ff9ba8;height:40px; text-align:center; padding-top:7px;display:block;}
.button2 a{ text-decoration:none; color:#fff;display:block;}

.info-left{ position:absolute; width:46%;  margin:70px 0px 0px 21%; }
.left-list{ width:100%;   height:210px;border:#ccc 1px solid; margin-bottom:30px;background-color:#fff;}
.list {width:94%; margin:25px 3% 100px 3%;  height:150px;}
.list-photo{ width:220px; height:150px; }
.name1{ margin:-153px 0% 0px 30%; font-size:20px;}
.time{margin:10px 0% 0px 30%; color:#aaa;font-size:14px;}
.reply{margin:75px 0% 0px 30%; font-size:14px; }


.info-right{position:absolute; width:12%;  margin:0px 0px 0px 69%; background-color:#fff;border:#ccc 1px solid; float:right; height:947px;}
.right-list{ width:90%; margin:15px 5% 0px 5%;  }
.dymic{ color:#e94057; margin-bottom:10px;}

.dymic a{ color:#aaa; text-decoration:none; float:right; font-size:12px;}
.show{ border-bottom:#f00 1px solid; }
.show-photo{ width:60px; height:60px; border-radius:8px; margin-top:10px;}
.show-name{ margin:-53px 0% 0px 32%; font-size:14px;}
.show-name span{ color:#aaa; float:right;}
.show-info{margin:10px 0% 0px 32%;font-size:12px; line-height:20px;}
.show-images{ margin:5px 0% 10px 12%;float:left; }
.show-images1{width:50px; height:50px; }
.show-images2{ margin:5px 0% 10px 12%;float:left; }
